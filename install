#! /bin/bash
#create required directories if they doen't exist
curdir=$(pwd)
mkdir -p ~/scripts
mkdir -p ~/.marks
mkdir -p ~/.vim/colors

#install vim colors
cp -R files/vim_colors/* ~/.vim/colors/

#insatll scripts
cp -R scripts/* ~/scripts/

#ensure gat is up to date
if [ -d ~/.gat ]; then
  cd ~/.gat
  git pull
else
  git clone https://github.com/zingales/gat.git ~/.gat
fi
cd ~/.gat

#copy gat script to scripts folder
cp ex_gat_script ~/scripts/gat

cd $curdir

#run the rest of the install script
python install.py
./git_config.sh
