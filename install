#! /bin/bash
#create required directories if they doen't exist
curdir=$(pwd)

mkdir -p ~/.marks

#run the rest of the install script
python install.py
if [ $? -eq 0 ]; then
    #Run all scripts in install_scripts
    cd install_scripts
    for file in *.sh; do
      ./$file
      cd $curdir/install_scripts
    done
  else
    echo "Main Install Script failed"
fi
