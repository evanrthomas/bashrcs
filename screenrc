shell -${SHELL}
vbell off

autodetach on
defscrollback 1024
startup_message off
hardstatus on

hardstatus alwayslastline "%{=}%-w%{+b w}%n %t%{-b w}%+w %=%c"
#hardstatus string "%{.kW}%-w%{.W}%n %t%{-}%{=b kw}%?%+w%? %=%c %d/%m/%Y" #B&W & date&time

# Instead of Control-a, make the escape/command character be Control-space
escape "^  "

screen -t "bash" 1
screen -t "vim" 2
bind c screen 1 # Window numbering starts at 1, not 0.
bind 0 select 10 #make 0 ==10

# control-left and control-right switch windows
bindkey "^[[1;5C" next
bindkey "^[[1;5D" prev

# get rid of silly xoff stuff
#bind s split

# navigating regions
bind j focus down
bind k focus up
bind h focus left
bind l focus right

# resizing regions
bind + resize +5
bind - resize -5
bind = resize =
